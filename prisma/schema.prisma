// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Lead {
  id          String   @id @default(cuid())
  name        String
  email       String
  business    String?
  message     String
  status      LeadStatus @default(NEW)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([createdAt])
  @@index([email])
  @@index([status])
}

model Testimonial {
  id          String   @id @default(cuid())
  name        String
  company     String?
  position    String?
  content     String
  rating      Int      @default(5)
  image       String?
  featured    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([featured])
}

model Service {
  id          String   @id @default(cuid())
  title       String
  description String
  icon        String   @default("âš¡")
  features    String[] // Array of feature strings
  order       Int      @default(0)
  active      Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([active, order])
}

model User {
  id          String       @id @default(cuid())
  name        String
  email       String       @unique
  password    String
  role        UserRole     @default(USER)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  posts       Post[]
  submissions Submission[]

  @@index([email])
}

model Post {
  id        String   @id @default(cuid())
  title     String
  slug      String   @unique
  content   String   @db.Text
  published Boolean  @default(false)
  authorId  String
  author    User     @relation(fields: [authorId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([authorId])
  @@index([published])
  @@index([createdAt])
}

model Submission {
  id           String              @id @default(cuid())
  title        String
  type         SubmissionType
  content      String              @db.Text
  attachmentUrl  String?
  attachmentName String?
  status       SubmissionStatus    @default(PENDING)
  adminReply   String?             @db.Text
  threadClosed Boolean             @default(false)
  authorId     String
  author       User                @relation(fields: [authorId], references: [id], onDelete: Cascade)
  messages       SubmissionMessage[]
  todoItems      TodoItem[]
  fileAttachment FileAttachment?
  createdAt    DateTime            @default(now())
  updatedAt    DateTime            @updatedAt
  expiresAt    DateTime?

  @@index([authorId])
  @@index([status])
  @@index([createdAt])
  @@index([expiresAt])
}

model FileAttachment {
  id           String     @id @default(cuid())
  submissionId String     @unique
  submission   Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  fileName     String
  mimeType     String
  data         Bytes
  createdAt    DateTime   @default(now())
}

model SubmissionMessage {
  id           String     @id @default(cuid())
  submissionId String
  submission   Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  content      String     @db.Text
  isAdmin      Boolean    @default(false)
  createdAt    DateTime   @default(now())

  @@index([submissionId])
}

model TodoItem {
  id           String     @id @default(cuid())
  submissionId String
  submission   Submission @relation(fields: [submissionId], references: [id], onDelete: Cascade)
  text         String
  completed    Boolean    @default(false)
  order        Int        @default(0)
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt

  @@index([submissionId])
}

enum LeadStatus {
  NEW
  CONTACTED
  QUALIFIED
  CONVERTED
  ARCHIVED
}

enum UserRole {
  USER
  ADMIN
}

enum SubmissionType {
  DOCUMENT
  TODO_LIST
  UPDATE
  MESSAGE
}

enum SubmissionStatus {
  PENDING
  REVIEWED
  ACKNOWLEDGED
}
